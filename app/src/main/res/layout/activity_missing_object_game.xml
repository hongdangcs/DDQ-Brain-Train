<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gameactivity.MissingObjectGameActivity"
    android:orientation="vertical"
    android:background="@color/orange_background">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/missingObjectLevelTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="TextView"
                android:textColor="@color/very_dark_blue"
                android:textSize="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/missingObjectTimeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="Thời gian: "
                    android:textSize="20dp" />


                <TextView
                    android:id="@+id/missingObjectScoreTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="Điểm: "
                    android:textSize="20dp" />

            </LinearLayout>

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/missingObjectRememberSetGameLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                app:columnCount="4" />

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/missingObjectQuestionSetGameLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                app:columnCount="4" />

            <TextView
                android:id="@+id/missingObjectInforTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@color/golden_yellow_laminate_color"
                android:gravity="center"
                android:padding="10dp"
                android:text="Hết lượt chơi!"
                android:textColor="@color/very_dark_blue"
                android:textSize="12dp" />

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/missingObjectAnswerSetGameLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                app:columnCount="4" />

            <TextView
                android:id="@+id/missingObjectCompleteNotiTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@color/golden_yellow_laminate_color"
                android:gravity="center"
                android:padding="10dp"
                android:text="Hết lượt chơi!"
                android:textColor="@color/very_dark_blue"
                android:textSize="12dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/missingObjectNextLevelButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Màn tiếp theo" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/missingObjectPlayAgainButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chơi lại" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/missingObjectResultButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Xem kết quả" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>